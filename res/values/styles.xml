<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="view_ww">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="view_mw">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="view_mm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="answer_btn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="answer_btn.type1">
        <item name="android:background">@drawable/bg_btn_1</item>
    </style>

    <style name="answer_btn.type2">
        <item name="android:background">@drawable/bg_btn_2</item>
    </style>

    <style name="answer_btn.type1.small">
        <item name="android:background">@drawable/bg_btn_1</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="answer_btn.type2.small">
        <item name="android:background">@drawable/bg_btn_2</item>
        <item name="android:textSize">26sp</item>
    </style>


    <style name="main_btn" parent="@style/view_ww">
        <item name="android:background">@null</item>
        <item name="android:textSize">45sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="main_btn.small">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="content" parent="@style/view_mm">
        <item name="android:background">@drawable/bg_common</item>
        <item name="android:padding">@dimen/content_padding</item>
    </style>
</resources>